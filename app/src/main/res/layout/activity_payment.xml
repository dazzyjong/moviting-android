<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.moviting.android.ui.activity.PaymentActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:id="@+id/content_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이체 정보"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingTop="41dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기업은행 계좌 : 409-12-123849\n계좌주: 힐링소사이어티\n결제금액: 20,000원"
                    android:textAlignment="center"
                    android:paddingBottom="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="위 계좌로 이체 후 아래 버튼을 클릭해주시면\n관리자가 확인 후 크레딧을 충전해드려요!\n(확인시간 : 10:00-21:00(평일기준))"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingBottom="25dp"/>

                <Button
                    android:id="@+id/request_check_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="입금확인 요청하기"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/ripple_round_button"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginBottom="25dp"
                    android:enabled="false"/>

                <RelativeLayout
                    android:id="@+id/credit_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_squre_button"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="크레딧"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/discount_of_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:layout_toLeftOf="@+id/arrow1"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_alignParentRight="true"/>

                    <ImageView
                        android:scaleType="centerInside"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_action_wallet_giftcard"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/coupon_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple_squre_button"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:text="할인쿠폰"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/discount_of_coupon"
                        android:layout_toLeftOf="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_alignParentRight="true" />

                    <ImageView
                        android:scaleType="centerInside"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_gift_coupon_icon_10"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp">
                    <TextView
                        android:text="총 비용"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="20,000원"
                        android:id="@+id/price"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp"
                    android:layout_marginBottom="25dp">
                    <TextView
                        android:text="크레딧(쿠폰) 결제"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/credit_or_coupon_amount"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp"
                    android:layout_marginBottom="25dp">
                    <TextView
                        android:text="최종 결제 금액"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/total_amount"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"/>
                </LinearLayout>

                <Button
                    android:text="결제하기"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/pay_button"
                    android:enabled="false"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/ripple_button_not_enrolled"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
